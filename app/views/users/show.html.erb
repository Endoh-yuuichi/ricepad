<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <%= @user.name %>
      <% if logged_in? && current_user.id == @user.id %>
       <%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-success" %>
      <% end %>
    </div>
    <% @user.topics.each do |topic| %>
      <div class="row">
        <%= link_to topic.description, topic_path(topic.id)%>
      </div>
      <%= link_to "編集する", edit_topic_path(topic.id), class:"btn btn-success" %>
      <%= link_to "削除", topic_path(topic), method: :delete %>
      <div class="row">
        <%= topic.category %>
      </div>
      <div class="row">
        <%= topic.material %>
      </div>
      <div class="row">
        <%= topic.recipe %>
      </div>
      <div class="row">
        <%= image_tag topic.image.url %>
      </div>
    <% end %>
    <% @user.favorite_topics.each do |topic| %>
      <div class="row">
        <%= topic.user.name %>
      </div>
      <div class="row">
        <%= topic.description %>
      </div>
      <div class="row">
        <%= topic.category %>
      </div>
      <div class="row">
        <%= topic.material %>
      </div>
      <div class="row">
        <%= topic.recipe %>
      </div>
      <div class="row">
        <%= image_tag topic.image.url %>
      </div>
    <% end %>
  </div>
</div>
